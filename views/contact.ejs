<%- include('partials/header') %>



  <div class="container">
      <div class="row align-self-center">
        <div id="content">
          <h1>World Beaches</h1>
          <h4>Best Travel packages</h4>
          <hr />
          <h3>
            Contact Us Below
          </h3> 
        </div>
      </div>
    </div>

    <div class="container my-20">
      <hr />

      <form>
        <div class="form-group">
          <input
            type="text"
            class="form-control"
            id="subject"
            placeholder="Subject"
          />
        </div>

        <div class="form-group">
          <input
            type="email"
            class="form-control"
            id="email"
            placeholder="Your Contact Email"
          />
        </div>

        <div class="form-group">
          <textarea
            name="text"
            class="form-control"
            id="text"
            cols="30"
            rows="10"
            placeholder="Enter your query here"
          ></textarea>
        </div>

        <input type="submit" class="btn btn-primary mb-2" value="Submit" />
      </form>
      <p id="Email_Sent_Message">
        Email sent successfully!
      </p>
    </div>

    <script>
      $("#Email_Sent_Message").hide();
      //$(".form-group")[0].reset();

      $("form").on("submit", e => {
        e.preventDefault();

        const email = $("#email")
          .val()
          .trim();
        const subject = $("#subject")
          .val()
          .trim();
        const text = $("#text")
          .val()
          .trim();

        const data = { email, subject, text };

        $("#Email_Sent_Message").show();
        //document.getElementById("form-group").reset();
        //$(".form-group")[0].reset();
        //$(".form-group")[0].reset();

        $.post("/email", data, function() {
          console.log("Server received our data");
          $("#email")[0].value = "";
          $("#subject")[0].value = "";
          $("#text")[0].value = "";
        });
      });
    </script>


<%- include('partials/footer') %>
